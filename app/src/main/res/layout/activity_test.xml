<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="suspension part" />

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="#000000"
            app:layout_scrollFlags="scroll">

            <RelativeLayout
                android:id="@+id/relative_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round"
                android:paddingLeft="@dimen/wh_16"
                android:paddingTop="@dimen/wh_10"
                android:paddingRight="@dimen/wh_16"
                android:paddingBottom="@dimen/wh_10">

                <TextView
                    android:id="@+id/tv_project_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:minWidth="@dimen/wh_64"
                    android:text="所属项目"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_10" />

                <TextView
                    android:id="@+id/tv_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/wh_16"
                    android:layout_toRightOf="@id/tv_project_text"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="所属项目"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_contract_people_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_project"
                    android:layout_marginTop="@dimen/wh_4"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:minWidth="@dimen/wh_64"
                    android:text="合同负责人"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_10" />


                <TextView
                    android:id="@+id/tv_contract_people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_project"
                    android:layout_marginLeft="@dimen/wh_16"
                    android:layout_marginTop="@dimen/wh_4"
                    android:layout_toRightOf="@id/tv_project_text"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="合同负责人"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/center"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/tv_contract_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_contract_people"
                    android:layout_marginTop="@dimen/wh_14"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="合同金额（元）"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_10" />

                <TextView
                    android:id="@+id/tv_contract_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_contract_money_text"
                    android:layout_marginTop="@dimen/wh_1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="6000000"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_18"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linear_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_contract_people"
                    android:layout_marginTop="@dimen/wh_14"
                    android:layout_toRightOf="@id/center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_receive_progress_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="收款完成度"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/text_10" />

                        <com.sky.chowder.ui.widget.Progress
                            android:id="@+id/tv_receive_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_receive_progress_text"
                            android:layout_marginTop="@dimen/wh_1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_invoice_progress_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="收款完成度"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/text_10" />

                        <com.sky.chowder.ui.widget.Progress
                            android:id="@+id/tv_invoice_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_receive_progress_text"
                            android:layout_marginTop="@dimen/wh_1"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_receive_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_progress"
                    android:layout_marginTop="@dimen/wh_14"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="已收款"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_10" />

                <TextView
                    android:id="@+id/tv_receive_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_receive_money_text"
                    android:layout_marginTop="@dimen/wh_1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="6000000"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_no_receive_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_receive_money"
                    android:layout_marginTop="@dimen/wh_12"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="等收款"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_10" />

                <TextView
                    android:id="@+id/tv_no_receive_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_no_receive_money_text"
                    android:layout_marginTop="@dimen/wh_1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="6000000"
                    android:textColor="@color/color_ff6324"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_invoice_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_progress"
                    android:layout_marginLeft="@dimen/wh_16"
                    android:layout_marginTop="@dimen/wh_14"
                    android:layout_toRightOf="@id/center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="已收款"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_10" />

                <TextView
                    android:id="@+id/tv_invoice_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_invoice_money_text"
                    android:layout_marginLeft="@dimen/wh_16"
                    android:layout_marginTop="@dimen/wh_1"
                    android:layout_toRightOf="@id/center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="6000000"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_no_invoice_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_invoice_money"
                    android:layout_marginLeft="@dimen/wh_16"
                    android:layout_marginTop="@dimen/wh_12"
                    android:layout_toRightOf="@id/center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="等收款"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_10" />

                <TextView
                    android:id="@+id/tv_no_invoice_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_no_invoice_money_text"
                    android:layout_marginLeft="@dimen/wh_16"
                    android:layout_marginTop="@dimen/wh_1"
                    android:layout_toRightOf="@id/center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="6000000"
                    android:textColor="@color/color_ff6324"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="30dp"-->
            <!--android:gravity="center"-->
            <!--android:text="suspension part" />-->
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>