<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sky.chowder.ui.widget.TouchView
        android:id="@+id/touch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/test"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/anim_solar"
        android:visibility="gone" />

    <com.sky.chowder.ui.widget.CircleProgress
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:proColor="@color/main_color"
        app:proWidth="5dp"
        app:radius="100dp"
        app:text="融资进度50%"
        app:textBackground="@drawable/sel_shape_rect"
        app:textcolor="#ffffff"
        app:textsize="18sp"
        app:totalColor="@color/green" />

    <com.sky.chowder.ui.widget.DrawView
        android:id="@+id/draw"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>