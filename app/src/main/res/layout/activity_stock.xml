<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <LinearLayout style="@style/stock_layout_style">

        <TextView
            style="@style/stock_tv_style"
            android:text="印花税:" />

        <TextView
            android:id="@+id/tvStampDuty"
            style="@style/stock_ed_style"
            android:hint="股票总价" />

    </LinearLayout>

    <View style="@style/all_line_style" />

    <LinearLayout style="@style/stock_layout_style">

        <TextView
            style="@style/stock_tv_style"
            android:text="过户税:" />

        <TextView
            android:id="@+id/tvRealEstateTransferTax"
            style="@style/stock_ed_style"
            android:hint="过户税" />
    </LinearLayout>

    <View style="@style/all_line_style" />

    <LinearLayout style="@style/stock_layout_style">

        <TextView
            style="@style/stock_tv_style"
            android:text="券商佣金:" />

        <TextView
            android:id="@+id/tvBrokerageCommission"
            style="@style/stock_ed_style"
            android:hint="券商佣金" />

    </LinearLayout>

    <View style="@style/all_line_style" />

    <LinearLayout style="@style/stock_layout_style">

        <TextView
            style="@style/stock_tv_style"
            android:layout_weight="1"
            android:text="总手续费:" />

        <TextView
            android:id="@+id/tvTotalCounterFee"
            style="@style/stock_ed_style"
            android:layout_weight="1"
            android:hint="总手续费" />

        <TextView
            android:id="@+id/totalBuyOrSell"
            style="@style/stock_tv_style"
            android:layout_weight="1"
            android:text="成交金额:" />

        <TextView
            android:id="@+id/totalBS"
            style="@style/stock_ed_style"
            android:layout_weight="1"
            android:hint="成交金额" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_dark" />

    <LinearLayout
        style="@style/stock_layout_style"
        android:paddingLeft="0dp">

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/wh_8"
            android:layout_weight="2"
            android:background="@drawable/sel_shape_yellow"
            android:text="买入"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15" />

        <Button
            android:id="@+id/btnSell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/wh_8"
            android:layout_weight="2"
            android:background="@drawable/sel_shape_yellow"
            android:text="卖出"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15" />

    </LinearLayout>

    <View style="@style/all_line_style" />

    <LinearLayout style="@style/stock_layout_style">

        <TextView
            style="@style/stock_tv_style"
            android:text="总价:" />

        <EditText
            android:id="@+id/etTotal"
            style="@style/stock_ed_style"
            android:hint="股票总价"
            android:inputType="numberDecimal"
            android:lines="1" />

    </LinearLayout>

    <View style="@style/all_line_style" />

    <LinearLayout style="@style/stock_layout_style">

        <TextView
            style="@style/stock_tv_style"
            android:text="单价:" />

        <EditText
            android:id="@+id/etUnit"
            style="@style/stock_ed_style"
            android:layout_weight="1"
            android:hint="股票价格"
            android:inputType="numberDecimal"
            android:lines="1" />

        <TextView
            style="@style/stock_tv_style"
            android:text="*数量:" />

        <EditText
            android:id="@+id/etNum"
            style="@style/stock_ed_style"
            android:layout_weight="1"
            android:hint="股票数量"
            android:inputType="number"
            android:lines="1" />
    </LinearLayout>

</LinearLayout>