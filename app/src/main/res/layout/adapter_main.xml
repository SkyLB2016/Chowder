<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/wh_8"
    android:elevation="@dimen/wh_48"
    app:cardBackgroundColor="@android:color/holo_blue_bright"
    app:cardCornerRadius="@dimen/wh_8">
    <!--android:stateListAnimator="@state_list_animator/state_list_animator"-->

    <LinearLayout
        android:id="@+id/cardView_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/wh_8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_describe"
            android:layout_width="@dimen/wh_72"
            android:layout_height="@dimen/wh_72"
            android:background="@mipmap/ic_launcher"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/wh_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="calssname"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_describe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/wh_4"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:text="描述"
                android:textSize="@dimen/text_micro" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>