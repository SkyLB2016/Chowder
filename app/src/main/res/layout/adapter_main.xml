<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/wh_8"
    android:elevation="@dimen/wh_48"
    app:cardBackgroundColor="@android:color/background_light"
    app:cardCornerRadius="@dimen/wh_8">
    <!--android:stateListAnimator="@state_list_animator/state_list_animator"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/wh_8">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/wh_72"
            android:layout_height="@dimen/wh_72"
            android:background="@mipmap/ic_launcher"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wh_16"
            android:layout_toRightOf="@id/image"
            android:text="calssname"
            android:textSize="@dimen/text_medium"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/wh_16"
            android:layout_marginTop="@dimen/wh_4"
            android:layout_toRightOf="@id/image"
            android:fontFamily="sans-serif-condensed"
            android:text="描述"
            android:textSize="@dimen/text_micro" />
    </RelativeLayout>
</android.support.v7.widget.CardView>