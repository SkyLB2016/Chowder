<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题背景色，toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 标题颜色；与drawerlayout共用会崩溃 -->
        <item name="android:textColorPrimary">#FF0000</item>
        <!-- 箭头 -->
        <!--<item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>-->
        <!-- 菜单按钮 -->
        <!--<item name="actionOverflowButtonStyle">@style/AppTheme.overflow</item>-->
        <!--recyclerview的间隔线-->
        <!--<item name="android:listDivider">@drawable/div_list</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!--横线的style-->
    <style name="all_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/main_color</item>
        <item name="android:layout_marginLeft">@dimen/wh_4</item>
    </style>

    <style name="stock_ed_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="stock_tv_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="stock_layout_style">
        <item name="android:weightSum">4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/wh_16</item>
    </style>
</resources>
