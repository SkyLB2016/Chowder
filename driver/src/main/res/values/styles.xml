<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题背景色，toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/bgColor</item>
        <!-- 标题颜色 -->
        <item name="android:textColorPrimary">#FF0000</item>
        <item name="android:windowAnimationStyle">@style/ActivitySwitchAnimation</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <!-- 箭头 -->
        <!--<item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>-->
        <!-- 菜单按钮 -->
        <!--<item name="actionOverflowButtonStyle">@style/AppTheme.overflow</item>-->
        <!--recyclerview的间隔线-->
        <!--<item name="android:listDivider">@drawable/div_list</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- activity switch animation -->
    <style name="ActivitySwitchAnimation" parent="android:Animation">
        <!--<item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>-->
        <!--<item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>-->
        <!--<item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>-->
    </style>
</resources>
